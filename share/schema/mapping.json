{
  "$id": "https://github.com/mrueda",
  "additionalProperties": false,
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "JSON Schema for Convert-Pheno mapping file",
  "type": "object",
  "required": [
    "project",
    "diseases",
    "ethnicity",
    "exposures",
    "id",
    "info",
    "interventionsOrProcedures",
    "measures",
    "phenotypicFeatures",
    "sex",
    "treatments"
  ],
  "properties": {
    "project": {
      "type": "object",
      "required": [
        "id",
        "source",
        "ontology"
      ],
      "properties": {
        "id": {
          "$ref": "#/$defs/stringField"
        },
        "source": {
          "type": "string",
          "enum": [
            "redcap",
            "cdisc-odm"
          ]
        },
        "ontology": {
          "$ref": "#/$defs/objectField/properties/ontology"
        },
        "description": {
          "$ref": "#/$defs/stringField"
        }
      }
    },
    "diseases": {
      "$ref": "#/$defs/objectField"
    },
    "ethnicity": {
      "$ref": "#/$defs/stringField"
    },
    "exposures": {
      "$ref": "#/$defs/objectField"
    },
    "geographicOrigin": {
      "$ref": "#/$defs/stringField"
    },
    "id": {
      "$ref": "#/$defs/objectField"
    },
    "info": {
      "$ref": "#/$defs/objectField"
    },
    "interventionsOrProcedures": {
      "$ref": "#/$defs/objectField"
    },
    "karyotypicSex": {
      "$ref": "#/$defs/stringField"
    },
    "measures": {
      "$ref": "#/$defs/objectField"
    },
    "pedigrees": {
      "$ref": "#/$defs/objectField"
    },
    "phenotypicFeatures": {
      "$ref": "#/$defs/objectField"
    },
    "sex": {
      "$ref": "#/$defs/stringField"
    },
    "treatments": {
      "$ref": "#/$defs/objectField"
    }
  },
  "$defs": {
    "objectField": {
      "type": "object",
      "properties": {
        "fields": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "dict": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "radio": {
          "type": "object",
          "additionalProperties": {
            "type": "object"
          }
        },
        "routesOfAdministration": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "ontology": {
          "type": "string",
          "enum": [
            "ncit",
            "ohdsi",
            "cdisc",
            "omim",
            "hpo"
          ]
        },
        "map": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": [
        "fields"
      ]
    },
    "stringField": {
      "type": "string"
    },
    "arrayField": {
      "type": "array"
    }
  }
}
